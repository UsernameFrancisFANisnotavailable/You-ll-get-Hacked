<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Your phone is hacked</title>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      background: black;
      color: #00ff00;
      font-family: monospace;
      height: 100%;
      overflow: hidden;
    }
    #overlay {
      position: fixed;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      background: black;
      cursor: pointer;
      z-index: 2;
    }
    video {
      position: fixed;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 1;
    }
  </style>
</head>
<body>
  <video id="vid" src="video.mp4" autoplay muted playsinline></video>

  <div id="overlay">
    <div>
      <h1>WARNING</h1>
      <p>Your phone has been hacked.</p>
      <p>Tap anywhere to activate audio and fullscreen.</p>
    </div>
  </div>

  <script>
    const vid = document.getElementById('vid');
    const overlay = document.getElementById('overlay');

    let alreadyActivated = false; // Empêche le 2ème clic

    overlay.addEventListener('click', async () => {
      if (alreadyActivated) return; // Ignore tous les clics suivants
      alreadyActivated = true;

      overlay.style.display = 'none';

      try {
        vid.muted = false;
        await vid.play();

        if (vid.requestFullscreen) {
          vid.requestFullscreen();
        }
      } catch (e) {
        console.log(e);
      }
    });
  </script>
</body>
</html>
